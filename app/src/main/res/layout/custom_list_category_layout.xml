<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewLocaleLista"
        android:layout_width="376dp"
        android:layout_height="186dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewNomeLocaleCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageViewLocaleLista"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLocaleLista" />

    <TextView
        android:id="@+id/textViewDescrizioneLocaleLista"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewLocaleLista"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeLocaleCoupon" />

    <RatingBar
        android:id="@+id/ratingBarList"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_width="81dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:isIndicator="true"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNomeLocaleCoupon"
        app:layout_constraintStart_toEndOf="@+id/textViewNomeLocaleCoupon"
        app:layout_constraintTop_toTopOf="@+id/textViewNomeLocaleCoupon" />


</android.support.constraint.ConstraintLayout>
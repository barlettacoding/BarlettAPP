<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLPopup"
        android:layout_width="347dp"
        android:layout_height="247dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/feedback_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="204dp">

        <Button
            android:id="@+id/buttonCancelUtil"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="50dp"
            android:layout_toStartOf="@+id/buttonDeleteUtils"
            android:background="@drawable/circle_button"
            android:drawableBottom="@drawable/round_backspace_white_36dp"
            android:paddingRight="4dp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/buttonDeleteUtils"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/circle_button"
            android:drawableBottom="@drawable/round_done_white_36dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/textViewPopupMessage"
            android:layout_width="316dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="167dp"
            android:text="@string/deletePhoto"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>